{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
     "jsx": "react",
     "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "build", "scripts"]
}
